# Configuración del servidor
PORT=3000
NODE_ENV=development

# URLs del SRI (Ecuador)
# Pruebas
SRI_RECEPTION_URL=https://celcer.sri.gob.ec/comprobantes-electronicos-ws/RecepcionComprobantesOffline?wsdl
SRI_AUTHORIZATION_URL=https://celcer.sri.gob.ec/comprobantes-electronicos-ws/AutorizacionComprobantesOffline?wsdl

# Producción (descomentar cuando esté listo)
# SRI_RECEPTION_URL=https://cel.sri.gob.ec/comprobantes-electronicos-ws/RecepcionComprobantesOffline?wsdl
# SRI_AUTHORIZATION_URL=https://cel.sri.gob.ec/comprobantes-electronicos-ws/AutorizacionComprobantesOffline?wsdl

# Certificado digital (.p12)
# Opción 1: Archivo local
CERT_URL_OR_PATH=file://./certificados/certificado.p12
# Opción 2: URL remota
# CERT_URL_OR_PATH=https://mi-servidor.com/certificados/certificado.p12
# Opción 3: Ruta relativa
# CERT_URL_OR_PATH=./certificados/certificado.p12

# Contraseña del certificado
CERT_PASSWORD=mi_password_segura

# Configuración de email SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=mi-email@gmail.com
SMTP_PASS=mi_password_de_aplicacion
SMTP_FROM=mi-email@gmail.com

